<%= form_with(
  model: user,
  url: '/register',
  html: {
    class: "bg-white rounded px-8 pt-6 pb-8",
    data: { controller: 'form', action: 'submit->form#clear'}
  }
) do |form| %>
  <div class="my-5">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Username' %>
  </div>

  <div class="my-5">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="my-5">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Senha' %>
  </div>

  <div class="my-5">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Repita Senha' %>
  </div>

  <div class="my-5 flex items-center justify-between">
    <%= link_to 'JÃ¡ possui uma conta?', '/login', class: 'text-blue-500 py-2 px-5 bg-gray-200 rounded-md' %>
    <%= form.submit 'Cadastrar', class: 'btn-primary' %>
  </div>
<% end %>
