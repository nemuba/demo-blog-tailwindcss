<%= form_with(model: user, url: '/login', html: { class: "bg-white rounded px-8 pt-6 pb-8" }) do |form| %>
  <div class="my-5">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="my-5">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Senha' %>
  </div>

  <div class="my-5 flex items-center justify-between">
    <%= link_to 'Cadastrar nova conta?', new_registration_path, class: 'text-blue-500 py-2 px-5 bg-gray-200 rounded-md' %>
    <%= form.submit 'Login', class: 'btn-primary' %>
  </div>
<% end %>
